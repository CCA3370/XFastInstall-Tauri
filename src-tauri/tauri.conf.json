{
  "productName": "XFast Manager",
  "version": "0.6.0",
  "identifier": "com.xfastmanager.tool",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "XFast Manager - X-Plane Addon Auto Manager",
        "width": 700,
        "height": 600,
        "minWidth": 650,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": [],
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  },
  "plugins": {
    "http": {
      "scope": ["https://api.github.com/repos/CCA3370/*"]
    }
  }
}
